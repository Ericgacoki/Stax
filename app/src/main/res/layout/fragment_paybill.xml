<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_13">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical">

        <include
                android:id="@+id/billDetails"
                layout="@layout/paybill_card_details" />

        <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/saveBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_13"
                android:layout_marginTop="@dimen/margin_8"
                android:fontFamily="font-normal"
                android:text="@string/save_bill"
                android:textSize="@dimen/text_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/billDetails" />

        <Button
                android:id="@+id/continue_btn"
                style="@style/StaxFabExtended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginHorizontal="@dimen/margin_13"
                android:layout_marginTop="10dp"
                android:fontFamily="font-medium"
                android:text="@string/btn_continue" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>