<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<com.hover.stax.channels.ChannelDropdown
		android:id="@+id/channel_dropdown"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:label="@string/channel_label"/>

	<com.hover.stax.views.StaxTextInputLayout
	    android:id="@+id/accountNumberEntry"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="-20dp"
		android:hint="@string/requester_account_number_label">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_13"
			android:textSize="@dimen/text_21"
			android:textColor="@color/offWhite"
			android:textCursorDrawable="@null"
			android:fontFamily="font-normal"
			android:inputType="number"
			android:id="@+id/accountNumber_input"/>
	</com.hover.stax.views.StaxTextInputLayout>

</LinearLayout>