<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/processing_background" />

    <com.hover.stax.views.StaxCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="92dp">

        <ImageView
                android:layout_width="106dp"
                android:layout_height="@dimen/margin_34"
                android:layout_gravity="start"
                android:layout_margin="@dimen/margin_10"
                android:src="@mipmap/ic_launcher_round" />

        <TextView
                android:id="@+id/explainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_21"
                android:layout_marginBottom="@dimen/margin_55"
                android:text="@string/destruct_cardbody"
                android:textColor="@color/offWhite"
                android:textSize="@dimen/text_16" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_21">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/continue_btn"
                    style="@style/StaxButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/brightBlue"
                    android:text="@string/btn_download"
                    android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>
    </com.hover.stax.views.StaxCardView>
</RelativeLayout>