<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/share_text">

    <TextView
            android:id="@+id/share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="font-normal"
            android:paddingVertical="@dimen/margin_21"
            android:text="@string/share_stax"
            android:textSize="@dimen/text_16"
            app:drawableEndCompat="@drawable/ic_share" />

    <TextView
            android:id="@+id/referral_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="font-normal"
            android:paddingVertical="@dimen/margin_21"
            android:text="@string/referral_label"
            android:textSize="@dimen/text_16"
            app:drawableEndCompat="@drawable/ic_copy" />

    <RelativeLayout
            android:id="@+id/referee_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <com.hover.stax.views.StaxTextInputLayout
                android:id="@+id/referee_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/referee_save_btn"
                android:hint="@string/referral_label"
                android:inputType="text" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/referee_save_btn"
                style="@style/StaxButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_13"
                android:fontFamily="font-normal"
                android:text="@string/btn_save" />
    </RelativeLayout>
</com.hover.stax.views.StaxCardView>