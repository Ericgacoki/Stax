<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:title="@string/share_text">

	<TextView
		android:id="@+id/share_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/margin_10"
		android:layout_marginBottom="@dimen/margin_8"
		android:paddingVertical="@dimen/margin_21"
		android:fontFamily="font-normal"
		android:background="?attr/selectableItemBackground"
		android:textSize="@dimen/text_16"
		app:drawableEndCompat="@drawable/ic_share"
		android:text="@string/share_stax" />

	<RelativeLayout android:id="@+id/referee_layout"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/open_referee_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/StaxButton"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginTop="@dimen/margin_13"
			android:fontFamily="font-normal"
			android:text="@string/add_referee_info" />
	</RelativeLayout>


</com.hover.stax.views.StaxCardView>