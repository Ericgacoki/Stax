<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<com.google.android.material.textfield.TextInputLayout
    style="@style/StaxLabeledDropdown"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dropdownInputLayout"
    android:fontFamily="font-normal"
    >

	<AutoCompleteTextView
	    android:id="@+id/dropdownInputTextView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/margin_13"
	    android:dropDownWidth="wrap_content"
	    android:background="@null"
	    android:textSize="@dimen/text_21"
	    android:textColor="@color/offWhite"
	    android:fontFamily="font-normal"
	    android:drawablePadding="@dimen/margin_13"
	    android:textCursorDrawable="@null"
	    app:errorTextColor="@color/bright_red"
	    android:completionThreshold="0"
	    android:dropDownHeight="300dp"
	    />

</com.google.android.material.textfield.TextInputLayout>

	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:id="@+id/dropdownNoticeIcon"
	    android:layout_marginEnd="@dimen/margin_21"
	    android:layout_marginTop="@dimen/margin_26"
	    android:layout_alignParentEnd="true"
	    android:layout_alignParentTop="true"
	    android:background="@color/transparent"
	    />
</RelativeLayout>