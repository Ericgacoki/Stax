<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<ImageView
	    android:id="@+id/dropdownNoticeIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentEnd="true"
	    android:layout_marginTop="@dimen/margin_26"
	    android:layout_marginEnd="@dimen/margin_21"
	    android:background="@color/colorPrimary"
	    android:visibility="gone" />

	<com.google.android.material.textfield.TextInputLayout
	    android:id="@+id/dropdownInputLayout"
	    style="@style/StaxLabeledDropdown"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:fontFamily="font-normal">

		<AutoCompleteTextView
		    android:id="@+id/dropdownInputTextView"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:completionThreshold="0"
		    android:drawablePadding="@dimen/margin_13"
		    android:dropDownWidth="wrap_content"
		    android:dropDownHeight="300dp"
		    android:fontFamily="font-normal"
		    android:padding="@dimen/margin_13"
		    android:textColor="@color/offWhite"
		    android:textCursorDrawable="@null"
		    android:textSize="@dimen/text_21"
		    app:errorTextColor="@color/bright_red" />

	</com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>