<?xml version="1.0" encoding="utf-8"?>
<com.hover.stax.views.StaxCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:title="@string/referral_cardhead">

	<com.hover.stax.views.StaxTextInputLayout
		android:id="@+id/referee_input"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/referral_label"
		android:inputType="text" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/submit"
			style="@style/StaxButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:text="@string/btn_save" />
	</RelativeLayout>

</com.hover.stax.views.StaxCardView>