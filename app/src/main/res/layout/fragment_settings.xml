<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".settings.SettingsFragment"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_13"
    android:layout_marginBottom="@dimen/margin_89"
    android:orientation="vertical"
	>

	<include layout="@layout/settings_card_accounts" />
	<include layout="@layout/settings_bounty_card_layout"/>
	<include layout="@layout/settings_security_card" />

	<include layout="@layout/settings_card_language" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/margin_13"
		android:lineSpacingExtra="2sp"
		android:textSize="@dimen/text_13"
	    	android:fontFamily="font-normal"
		android:textColor="@color/darkGrey"
		android:text="@string/disclaimer"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>