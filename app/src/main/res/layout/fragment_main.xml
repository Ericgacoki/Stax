<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"

	>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingVertical="@dimen/margin_89"
    android:paddingHorizontal="@dimen/margin_5">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginHorizontal="@dimen/margin_3"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_marginVertical="@dimen/margin_26"
	    android:orientation="horizontal">

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/text_21"
		    android:gravity="center"
		    android:fontFamily="font-normal"
		    android:layout_gravity="center"
		    android:layout_marginHorizontal="@dimen/margin_8"
		    android:text="@string/welcome_to"/>

		<ImageView
		    android:layout_width="80dp"
		    android:layout_height="40dp"
		    android:src="@mipmap/stax"
		    android:id="@+id/home_stax_logo"
		    android:layout_gravity="center"
		    android:gravity="center" />
	</LinearLayout>

	<androidx.cardview.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginHorizontal="@dimen/margin_8"
	    android:layout_marginTop="@dimen/margin_5"
	    app:cardElevation="8dp"
	    android:clipToPadding="true"
	    android:id="@+id/airtime"
	    app:cardCornerRadius="@dimen/radius"
	    app:cardBackgroundColor="@color/cardViewColor">
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/nav_airtime"
		    android:textSize="@dimen/text_21"
		    android:fontFamily="font-normal"
		    android:background="@drawable/button_bg_grey"
		    android:padding="@dimen/margin_24"

		    />
	</androidx.cardview.widget.CardView>

	<View
	    android:layout_width="match_parent"
	    android:background="@color/colorPrimaryDark"
	    android:layout_height="5dp"/>

	<androidx.cardview.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginHorizontal="@dimen/margin_8"
	    app:cardElevation="8dp"
	    android:id="@+id/request"
	    app:cardCornerRadius="@dimen/radius"
	    app:cardBackgroundColor="@color/cardViewColor">
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/cta_request"
		    android:fontFamily="font-normal"
		    android:textSize="@dimen/text_21"
		    android:background="@drawable/button_bg_grey"
		    android:padding="@dimen/margin_24"
		    />
	</androidx.cardview.widget.CardView>

	<View
	    android:layout_width="match_parent"
	    android:background="@color/colorPrimaryDark"
	    android:layout_height="5dp"/>

	<androidx.cardview.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginHorizontal="@dimen/margin_8"
	    app:cardElevation="8dp"
	    android:layout_marginBottom="@dimen/margin_21"
	    android:id="@+id/transfer"
	    app:cardCornerRadius="@dimen/radius"
	    app:cardBackgroundColor="@color/cardViewColor">
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/cta_transfer"
		    android:fontFamily="font-normal"
		    android:background="@drawable/button_bg_grey"
		    android:textSize="@dimen/text_21"
		    android:padding="@dimen/margin_24"
		    />
	</androidx.cardview.widget.CardView>

</LinearLayout>
</androidx.core.widget.NestedScrollView>