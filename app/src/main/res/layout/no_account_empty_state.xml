<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/noAccountFoundDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_24"
            android:drawablePadding="@dimen/margin_16"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="@string/no_accounts_found_desc"
            android:textSize="@dimen/text_16"
            app:drawableTopCompat="@drawable/ic_baseline_manage_search_24" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cant_find_institution"
            android:textSize="@dimen/text_16" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/informUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_13"
            android:gravity="center"
            app:rippleColor="@color/brightBlue"
            android:text="@string/inform_us_here"
            android:textColor="@color/brightBluePressed"
            app:backgroundTint="@color/offWhite"
            app:fontFamily="@font/brutalista_medium"
            app:icon="@drawable/ic_baseline_open_in_new_16"
            app:iconGravity="textEnd"
            app:iconPadding="@dimen/margin_13"
            app:iconTint="@color/brightBluePressed" />

</LinearLayout>