<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <com.hover.stax.views.StaxCardView
                android:id="@+id/selectedChannels_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultBackPress="true"
                app:showBack="true"
                app:title="@string/your_accounts">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/selectedChannelsRecyclerView"/>
            </FrameLayout>

        </com.hover.stax.views.StaxCardView>

        <com.hover.stax.views.StaxCardView
                android:id="@+id/simSupportedChannels_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultBackPress="true"
                app:showBack="false"
                app:title="@string/add_an_account">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/simSupportedChannelsRecyclerView"/>
            </FrameLayout>


        </com.hover.stax.views.StaxCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>