<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/bountyButtonsId"
    android:paddingBottom="@dimen/margin_65"
    android:gravity="end|center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:id="@+id/btnRow"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="visible"
	    >
		<androidx.appcompat.widget.AppCompatButton
		    android:id="@+id/btnRetry"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/retry"
		    android:visibility="visible"
		    android:fontFamily="font-medium"
		    style="@style/StaxButton" />
	</RelativeLayout>

	<androidx.appcompat.widget.AppCompatButton
	    android:id="@+id/btnSubmitFlow"
	    style="@style/StaxButtonColored"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginHorizontal="@dimen/margin_13"
	    android:text="@string/submit_flow"
	    android:fontFamily="font-medium" />

</LinearLayout>